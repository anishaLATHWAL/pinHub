<% include ./partials/header.ejs%>

<div class="w-full flex items-center justify-center h-screen bg-[#C38154]">
  <div class="w-96 h-[60vh] bg-white px-10 py-10 rounded-[20px]">
    <h1
      class="text-3xl text-center text-zinc-700 font-semibold leading-none tracking-tighter capitalize"
    >
      Create new Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block mt-10 w-full px-3 py-2"
        type="text"
        name="name"
        placeholder="Full name"
      />
      <input
        class="border-2 rounded-md block mt-3 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 rounded-md block mt-3 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="email"
      />

      <input
        class="border-2 rounded-md block mt-3 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="password"
      />
      <input
        class="border-2 cursor-pointer rounded-full block mt-7 w-full px-3 py-2 bg-[#C38154] text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
    </form>
    <a
      class="inline-block w-full mt-3 text-center text-sm font-semibold text-zinc-700"
      href="/"
      >Already have an account?
    </a>
  </div>
</div>
<% include ./partials/footer.ejs%>
